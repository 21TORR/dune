{
	"name": "@21torr/dune",
	"version": "2.0.0-beta.2",
	"description": "A library of commonly used JS functionality.",
	"license": "MIT",
	"homepage": "https://github.com/21TORR/dune",
	"repository": {
		"type": "git",
		"url": "https://github.com/21TORR/dune.git"
	},
	"type": "module",
	"scripts": {
		"build": "pnpm run clean && rollup -c",
		"clean": "rm -rf dist",
		"dev": "tsc --project tsconfig.build.json --noEmitOnError --noErrorTruncation --listEmittedFiles --pretty -w",
		"lint": "prettier-package-json --use-tabs --list-different",
		"prepublishOnly": "pnpm run build",
		"test": "tsc --noEmit --emitDeclarationOnly false --listFiles --pretty && pnpm run test:publish",
		"test:publish": "pnpm run build && publint"
	},
	"dependencies": {
		"core-js": "^3.29.1",
		"rollup-plugin-copy": "^3.5.0",
		"xtend": "^4.0.2"
	},
	"optionalDependencies": {
		"next": "^13.0",
		"react": "^18.0",
		"react-dom": "^18.0"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.0.0",
		"@types/node": "^18.15.1",
		"@types/qunit": "^2.19.4",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@types/xtend": "^4.0.4",
		"fs-extra": "^11.1.0",
		"glob": "^9.2.1",
		"next": "^13.3.0",
		"prettier-package-json": "^2.8.0",
		"publint": "^0.1.10",
		"qunit": "^2.19.4",
		"react": "^18.0",
		"react-dom": "^18.0",
		"rollup": "^3.19.1",
		"rollup-plugin-cleanup": "^3.2.1",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5"
	},
	"publishConfig": {
		"access": "public"
	}
}

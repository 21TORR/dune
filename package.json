{
	"name": "@21torr/dune",
	"version": "1.5.6",
	"description": "A library of commonly used JS functionality.",
	"license": "MIT",
	"homepage": "https://github.com/21TORR/dune",
	"repository": {
		"type": "git",
		"url": "https://github.com/21TORR/dune.git"
	},
	"type": "module",
	"scripts": {
		"build": "pnpm run clean && rollup -c",
		"clean": "rm -rf dist",
		"dev": "tsc --project tsconfig.build.json --noEmitOnError --noErrorTruncation --listEmittedFiles --pretty -w",
		"release": "pnpm run build && echo '\nPrepare `dist` directory...\n' && cp {*.md,LICENSE,package.json} dist && echo 'done' && cd dist && pnpm publish && cd .. && rm -rf dist",
		"test": "tsc --noEmit --emitDeclarationOnly false --pretty"
	},
	"dependencies": {
		"core-js": "^3.19.1",
		"xtend": "^4.0.2"
	},
	"optionalDependencies": {
		"preact": "^10.5.13"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.0.0",
		"@types/node": "^16.11.6",
		"@types/qunit": "^2.11.2",
		"@types/xtend": "^4.0.4",
		"browserstack-runner": "^0.9.4",
		"fs-extra": "^10.0.0",
		"glob": "^9.2.1",
		"preact": "^10.5.13",
		"prettier-package-json": "^2.6.0",
		"qunit": "^2.17.2",
		"react": "^18.2.0",
		"rollup": "^3.19.1",
		"tslib": "^2.5.0",
		"typescript": "^4.4.4"
	},
	"publishConfig": {
		"access": "public"
	},
	"np": {
		"branch": "1.x",
		"contents": "dist"
	}
}
